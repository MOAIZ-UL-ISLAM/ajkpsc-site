---
import forestbg from "../assets/bg-forest.jpg";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<section class="relative min-h-[80vh] w-full py-8 md:py-16">
  <!-- Background image with overlay -->
  <div class="absolute inset-0 z-0">
    <Image
      src={forestbg}
      alt="Contact background"
      class="w-full h-full object-cover"
      width={1920}
      height={1080}
    />
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 h-full">
    <div class="text-center text-white mb-8 md:mb-12">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-3 md:mb-4">
        Suggestions & Complaints
      </h1>
      <p class="text-base sm:text-lg md:text-xl max-w-2xl mx-auto px-4">
        We value your feedback and are here to assist you. Feel free to reach
        out through any of the following channels.
      </p>
    </div>

    <!-- Cards Grid -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 max-w-6xl mx-auto"
    >
      <!-- Phone Card -->
      <div
        class="bg-white/10 backdrop-blur-md p-4 md:p-6 rounded-lg hover:scale-105 transition-transform duration-300 transform hover:shadow-xl text-center"
      >
        <Icon name="mdi:phone" class="w-8 h-8 md:w-12 md:h-12 text-white mx-auto mb-3 md:mb-4" />
        <h3 class="text-white text-lg md:text-xl font-semibold mb-2">Call on</h3>
        <p class="text-white/90 text-sm md:text-base">+92 XX XXXXXXX</p>
      </div>

      <!-- Email Card -->
      <div
        class="bg-white/10 backdrop-blur-md p-4 md:p-6 rounded-lg hover:scale-105 transition-transform duration-300 transform hover:shadow-xl text-center"
      >
        <Icon name="mdi:email" class="w-8 h-8 md:w-12 md:h-12 text-white mx-auto mb-3 md:mb-4" />
        <h3 class="text-white text-lg md:text-xl font-semibold mb-2">Mail at</h3>
        <p class="text-white/90 text-sm md:text-base">info@xyz.gov.pk</p>
      </div>

      <!-- Office Hours Card -->
      <div
        class="bg-white/10 backdrop-blur-md p-4 md:p-6 rounded-lg hover:scale-105 transition-transform duration-300 transform hover:shadow-xl text-center"
      >
        <Icon name="mdi:clock" class="w-8 h-8 md:w-12 md:h-12 text-white mx-auto mb-3 md:mb-4" />
        <h3 class="text-white text-lg md:text-xl font-semibold mb-2">Office hrs</h3>
        <p class="text-white/90 text-sm md:text-base">09am to 05pm</p>
      </div>

      <!-- Fax Card -->
      <div
        class="bg-white/10 backdrop-blur-md p-4 md:p-6 rounded-lg hover:scale-105 transition-transform duration-300 transform hover:shadow-xl text-center"
      >
        <Icon name="mdi:fax" class="w-8 h-8 md:w-12 md:h-12 text-white mx-auto mb-3 md:mb-4" />
        <h3 class="text-white text-lg md:text-xl font-semibold mb-2">Fax #</h3>
        <p class="text-white/90 text-sm md:text-base">+92-XX-XXXXXXX</p>
      </div>
    </div>
  </div>
</section>
