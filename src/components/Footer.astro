---
import { Icon } from "astro-icon/components";
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {/* Logo and About */}
      <div class="space-y-6">
        <div class="flex items-center">
          <img
            src="/logo.png"
            alt="Logo"
            class="h-12 w-auto rounded-full shadow-lg transform hover:scale-110 transition-transform duration-300"
          />
          <h4 class="pl-4 text-2xl font-bold text-white">Ajkpsc</h4>
        </div>
        <p class="text-blue-100 leading-relaxed">
          Your trusted partner in civil services examination preparation, 
          committed to excellence and transparent recruitment.
        </p>
        <div class="flex space-x-3">
          {
            [
              { name: "facebook", url: "https://facebook.com" },
              { name: "twitter", url: "https://twitter.com" },
              { name: "instagram", url: "https://instagram.com" },
            ].map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-blue-200 hover:text-white transform hover:scale-125 transition-all duration-300"
              >
                <Icon name={`mdi:${social.name}`} class="w-6 h-6" />
              </a>
            ))
          }
        </div>
      </div>

      {/* Quick Links */}
      <div class="space-y-6">
        <h3 class="text-xl font-semibold border-b-2 border-blue-400 pb-2">Quick Links</h3>
        <ul class="space-y-3">
          {
            [
              { name: "Home", link: "/" },
              { name: "About", link: "/about" },
              { name: "Exams", link: "/exams" },
              { name: "Results", link: "/results" },
              { name: "Contact", link: "/contact" },
              { name: "Sitemap", link: "/sitemap" },
            ].map((item) => (
              <li>
                <a
                  href={item.link}
                  class="text-blue-100 hover:text-white transition-colors duration-300 flex items-center group"
                >
                  <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity">→</span>
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Contact Info */}
      <div class="space-y-6">
        <h3 class="text-xl font-semibold border-b-2 border-blue-400 pb-2">Contact Us</h3>
        <div class="space-y-3 text-blue-100">
          <p class="flex items-center gap-3">
            <Icon name="mdi:location" class="w-6 h-6 text-blue-400" />
            Public Service Commission, Muzaffarabad, AJK
          </p>
          <p class="flex items-center gap-3">
            <Icon name="mdi:phone" class="w-6 h-6 text-blue-400" />
            +92 58X XXX XXXX
          </p>
          <p class="flex items-center gap-3">
            <Icon name="mdi:email" class="w-6 h-6 text-blue-400" />
            info@ajkpsc.gov.pk
          </p>
        </div>
      </div>

      {/* Newsletter */}
      <div class="space-y-6">
        <h3 class="text-xl font-semibold border-b-2 border-blue-400 pb-2">Stay Updated</h3>
        <p class="text-blue-100 mb-4">
          Subscribe to our newsletter for latest updates and notifications.
        </p>
        <div class="flex">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="w-full px-4 py-2 rounded-l-lg bg-blue-800 text-white placeholder-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-400"
          />
          <button 
            class="bg-blue-500 text-white px-4 py-2 rounded-r-lg hover:bg-blue-600 transition duration-300"
          >
            <Icon name="mdi:send" class="w-5 h-5" />
          </button>
        </div>
      </div>
    </div>

    {/* Map */}
    <div class="mt-12 w-full h-64 rounded-lg overflow-hidden shadow-lg">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3293.7792409188414!2d73.472795175486!3d34.356096101625546!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x38e09fc44271a90f%3A0x8a1e65b91770d442!2sPublic%20Service%20Commission%20AJk%20Pakistan!5e0!3m2!1sen!2s!4v1740830890723!5m2!1sen!2s"
        width="100%"
        height="100%"
        class="border-0"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>

    {/* Copyright */}
    <div class="mt-8 pt-8 border-t border-blue-800 text-center">
      <p class="text-blue-200">
        © {new Date().getFullYear()} Azad Jammu & Kashmir Public Service Commission. 
        All rights reserved.
      </p>
      <div class="mt-4 flex justify-center space-x-4 text-sm text-blue-300">
        <a href="#" class="hover:text-white">Privacy Policy</a>
        <span>|</span>
        <a href="#" class="hover:text-white">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>