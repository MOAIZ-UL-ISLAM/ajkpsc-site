---
import { Icon } from "astro-icon/components";
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Logo and About -->
      <div class="space-y-4">
        <div class="flex items-center">
          <img
            src="/logo.png"
            alt="Logo"
            class="h-12 w-auto transform hover:scale-110 transition-transform duration-300"
          />
          <h4 class="pl-6 text-2xl">Ajkpsc</h4>
        </div>
        <p class="text-gray-400">
          Your trusted partner in civil services examination preparation.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3 class="text-xl font-semibold">Quick Links</h3>
        <ul class="space-y-2">
          {
            ["Home", "About", "Services", "Contact"].map((link) => (
              <li>
                <a
                  href={`/${link.toLowerCase()}`}
                  class="text-gray-400 hover:text-white transition-colors duration-300 hover:translate-x-2 inline-block transform"
                >
                  {link}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="space-y-4">
        <h3 class="text-xl font-semibold">Contact Us</h3>
        <div class="space-y-2 text-gray-400">
          <p class="flex items-center gap-2">
            <Icon name="mdi:location" class="w-5 h-5" />
            123 Main Street, City, Country
          </p>
          <p class="flex items-center gap-2">
            <Icon name="mdi:phone" class="w-5 h-5" />
            +92 123 456 7890
          </p>
          <p class="flex items-center gap-2">
            <Icon name="mdi:email" class="w-5 h-5" />
            info@example.com
          </p>
        </div>
      </div>

      <!-- Social Media -->
      <div class="space-y-4">
        <h3 class="text-xl font-semibold">Follow Us</h3>
        <div class="flex space-x-4">
          {
            [
              { name: "facebook", url: "https://facebook.com" },
              { name: "twitter", url: "https://twitter.com" },
              { name: "instagram", url: "https://instagram.com" },
              { name: "gmail", url: "https://gmail.com" },
            ].map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transform hover:scale-125 transition-all duration-300"
              >
                <Icon name={`mdi:${social.name}`} class="w-6 h-6" />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Map -->
    <div class="mt-8 w-full h-48 md:h-64">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3293.7792409188414!2d73.472795175486!3d34.356096101625546!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x38e09fc44271a90f%3A0x8a1e65b91770d442!2sPublic%20Service%20Commission%20AJk%20Pakistan!5e0!3m2!1sen!2s!4v1740830890723!5m2!1sen!2s"
        width="100%"
        height="100%"
        class="rounded-lg shadow-lg"
        style="border:0;"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
      <p>Â© {new Date().getFullYear()} AJKPSC. All rights reserved.</p>
    </div>
  </div>
</footer>
