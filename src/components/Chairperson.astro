---
import { Image } from "astro:assets";
import chairmanImg from "../assets/chairman.jpeg";
import bgPattern from "../assets/chairbg.jpg";
---

<section class="relative min-h-screen py-20 overflow-hidden bg-gradient-to-b from-gray-900 to-black">
    <!-- Subtle Background Pattern -->
    <div class="absolute inset-0 z-0 opacity-20">
        <Image
            src={bgPattern}
            alt="Background Pattern"
            class="w-full h-full object-cover"
        />
    </div>

    <!-- Main Content -->
    <div class="relative z-10 container mx-auto px-4 lg:px-8">
        <div class="max-w-6xl mx-auto">
            <!-- Section Header -->
            <div class="text-center mb-16">
                <h1 class="text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-teal-400 mb-4">
                    Message from the Chairman
                </h1>
                <div class="w-24 h-1 bg-blue-500 mx-auto"></div>
            </div>

            <!-- Content Grid -->
            <div class="grid lg:grid-cols-12 gap-12 items-center">
                <!-- Chairman Image Column -->
                <div class="lg:col-span-5">
                    <div class="relative">
                        <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-teal-500 rounded-lg transform rotate-3 scale-105"></div>
                        <div class="relative rounded-lg overflow-hidden shadow-2xl">
                            <Image
                                src={chairmanImg}
                                alt="Chairman AJKPSC"
                                class="w-full h-auto transform transition-transform duration-500 hover:scale-105"
                            />
                        </div>
                    </div>
                </div>

                <!-- Message Content Column -->
                <div class="lg:col-span-7">
                    <div class="space-y-6 text-gray-100">
                        <blockquote class="text-xl md:text-2xl font-light leading-relaxed italic">
                            "Welcome to AJK Public Service Commission. Our commitment to excellence, 
                            transparency, and merit-based selection remains unwavering."
                        </blockquote>
                        
                        <p class="text-lg leading-relaxed">
                            As Chairman, I am dedicated to upholding the highest standards of integrity
                            and fairness in our recruitment processes. Our mission is to identify and
                            select the most capable individuals who will contribute to the development
                            and progress of our region.
                        </p>
                        
                        <p class="text-lg leading-relaxed">
                            Through modern technology and innovative practices, we ensure a transparent
                            and efficient selection process that serves both our candidates and our
                            institution's noble objectives.
                        </p>

                        <!-- Chairman's Signature Area -->
                        <div class="pt-8 border-t border-gray-700">
                            <h3 class="text-2xl font-bold text-blue-400">Mr. Chairman Name</h3>
                            <p class="text-lg text-gray-400">Chairman</p>
                            <p class="text-md text-gray-500">AJK Public Service Commission</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Decorative Elements -->
    <div class="absolute bottom-0 right-0 w-64 h-64 bg-blue-500 opacity-10 rounded-full blur-3xl"></div>
    <div class="absolute top-0 left-0 w-96 h-96 bg-teal-500 opacity-10 rounded-full blur-3xl"></div>
</section>
