---
import { Image } from "astro:assets";
import chairmanImg from "../assets/chairman.jpeg";
import bgPattern from "../assets/chairbg.jpg";
---

<section class="relative h-[500px] overflow-hidden bg-gradient-to-r from-gray-100 to-gray-600">
    <!-- Background Pattern -->
    <div class="absolute inset-0 z-0 opacity-10">
        <Image
            src={bgPattern}
            alt="Background Pattern"
            class="w-full h-full object-cover"
        />
    </div>

    <!-- Main Content -->
    <div class="relative z-10 h-full container mx-auto px-4">
        <div class="h-full flex items-center">
            <!-- Content Layout -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center">
                <!-- Chairman Image -->
                <div class="md:col-span-1">
                    <div class="relative">
                        <div class="absolute inset-0 bg-blue-500/20 rounded-lg"></div>
                        <Image
                            src={chairmanImg}
                            alt="Chairman AJKPSC"
                            class="w-full h-[300px] object-top rounded-lg"
                        />
                    </div>
                </div>

                <!-- Message Content -->
                <div class="md:col-span-2">
                    <h1 class="text-3xl font-bold text-white mb-4">
                        Message from the Chairman
                    </h1>
                    
                    <blockquote class="text-lg text-gray-200 mb-4 italic">
                        "Welcome to AJK Public Service Commission. Our commitment to excellence, 
                        transparency, and merit-based selection remains unwavering."
                    </blockquote>
                    
                    <p class="text-gray-300 mb-4">
                        As Chairman, I am dedicated to upholding the highest standards of integrity
                        and fairness in our recruitment processes.
                    </p>

                    <!-- Signature -->
                    <div class="mt-4">
                        <h3 class="text-xl font-bold text-blue-400">Mr. Chairman Name</h3>
                        <p class="text-gray-400">Chairman, AJK Public Service Commission</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
