---
import { Icon } from "astro-icon/components";
---

<div class="top-0 left-0 right-0 z-50 bg-white shadow-md">
  <!-- Top info bar -->
  <div class="hidden sm:block bg-gray-100 py-1">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap items-center justify-between">
        <!-- Email section -->
        <div class="flex items-center space-x-2">
          <Icon name="mdi:email" class="w-5 h-5 text-green-600" />
          <a href="mailto:info@ajkpsc.com" class="text-sm hover:text-green-600"
            >info@ajkpsc.com</a
          >
        </div>

        <!-- Phone and Hours section -->
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <Icon name="mdi:phone" class="w-5 h-5 text-green-600" />
            <a href="tel:+923xxxxxxxxx" class="text-sm hover:text-green-600"
              >+92 3XX XXXXXXX</a
            >
          </div>

          <!-- Hours dropdown -->
          <div class="relative group">
            <button
              class="flex items-center space-x-2 text-sm bg-green-600 text-white px-3 py-1 rounded cursor-pointer hover:bg-green-700"
            >
              <Icon name="mdi:clock" class="w-5 h-5" />
              <span>Open Today: 9AM - 5PM <?xml version="1.0" encoding="utf-8"?><svg class="h-4 w-4 inline mx-2" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 122.88 66.91" style="enable-background:new 0 0 122.88 66.91" xml:space="preserve"><g><path d="M11.68,1.95C8.95-0.7,4.6-0.64,1.95,2.08c-2.65,2.72-2.59,7.08,0.13,9.73l54.79,53.13l4.8-4.93l-4.8,4.95 c2.74,2.65,7.1,2.58,9.75-0.15c0.08-0.08,0.15-0.16,0.22-0.24l53.95-52.76c2.73-2.65,2.79-7.01,0.14-9.73 c-2.65-2.72-7.01-2.79-9.73-0.13L61.65,50.41L11.68,1.95L11.68,1.95z"/></g></svg></span>
            </button>
            <div
              class="hidden group-hover:block absolute right-0 z-99 mt-2 w-60 bg-white rounded-md shadow-lg py-2 "
            >
                <div class="px-4 py-2">
                <p class="text-sm font-semibold mb-2 text-green-600 border-b pb-1">Working Hours</p>
                <table class="w-full text-sm">
                  <tr class="hover:bg-gray-50">
                  <td class="py-1 pr-4">Monday-Friday</td>
                  <td class="py-1 text-green-600">9AM - 5PM</td>
                  </tr>
                  <tr class="hover:bg-gray-50">
                  <td class="py-1 pr-4">Saturday</td>
                  <td class="py-1 text-red-500">Closed</td>
                  </tr>
                  <tr class="hover:bg-gray-50">
                  <td class="py-1 pr-4">Sunday</td>
                  <td class="py-1 text-red-500">Closed</td>
                  </tr>
                </table>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Moving headlines -->
  <div class="bg-green-600 text-white py-2 hidden sm:block relative">
    <div class="container mx-auto px-4">
      <div class="flex items-center">
        <span class="font-semibold text-red-600 animate-pulse mr-4">
          Important Notice:
        </span>
        <div class="overflow-hidden relative flex-1">
          <div class="animate-marquee whitespace-nowrap inline-block">
            <span class="mx-8">üìÖ PSC Exam Schedule Updated</span>
            <span class="mx-8">üíº New Positions Available for Public Service</span>
            <span class="mx-8">‚è∞ Last Date for Applications Extended</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes marquee {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(-100%);
    }
  }

  .animate-marquee {
    animation: marquee 25s linear infinite;
  }
</style>
