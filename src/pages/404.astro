<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404 - Page Not Found</title>
  </head>
  <body class="bg-gray-900 min-h-screen flex items-center justify-center">
    <div class="text-center max-w-xl mx-auto">
      <h1
        class="text-9xl md:text-[180px] font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-purple-500 opacity-0"
        id="error"
      >
        404
      </h1>
      <p class="text-2xl md:text-3xl text-gray-300 mt-6 opacity-0" id="message">
        Looks like you've ventured into unknown territory
      </p>
      <p class="text-gray-400 mt-4 opacity-0" id="submessage">
        The page you're looking for doesn't exist or has been moved
      </p>
      <a
        href="/"
        class="group inline-flex items-center gap-2 mt-8 px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-full hover:scale-105 transition-all duration-300 opacity-0"
        id="button"
      >
        <span>Return Home</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 group-hover:translate-x-1 transition-transform"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.7/dist/gsap.min.js"
    ></script>
    <script>
      import { gsap } from "gsap";

      window.addEventListener("load", () => {
        const tl = gsap.timeline({ defaults: { ease: "back.out(1.7)" } });

        tl.to("#error", {
          opacity: 1,
          scale: 1,
          duration: 1,
          delay: 0.2,
          from: { scale: 0.5 },
        })
          .to("#message", {
            opacity: 1,
            y: 0,
            duration: 0.8,
            from: { y: 30 },
          })
          .to(
            "#submessage",
            {
              opacity: 1,
              y: 0,
              duration: 0.8,
              from: { y: 30 },
            },
            "-=0.6"
          )
          .to(
            "#button",
            {
              opacity: 1,
              y: 0,
              duration: 0.8,
              from: { y: 30 },
            },
            "-=0.6"
          );

        // Floating animation for the 404 text
        gsap.to("#error", {
          y: 20,
          rotation: 3,
          duration: 3,
          repeat: -1,
          yoyo: true,
          ease: "power1.inOut",
        });
      });
    </script>
  </body>
</html>
