---
import Layout from "../layouts/Layout.astro";
---

<Layout seo={{ title: "Contact Us" }}>
    <div class="container mx-auto px-4 py-12 max-w-6xl">
        <h1 class="text-4xl font-bold text-center mb-12 text-gray-800">Contact Us</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 bg-white rounded-lg shadow-lg p-8">
            <div class="contact-info bg-gray-50 p-6 rounded-lg">
                <h2 class="text-2xl font-bold mb-6 text-gray-700 border-b pb-2">Contact Information</h2>
                <div class="space-y-6">
                    <div class="flex items-center">
                        <span class="text-blue-600 mr-3">
                            <!-- You can add an icon here -->
                        </span>
                        <p><strong>Abbreviation:</strong> PSC (Public Service Commission)</p>
                    </div>
                    <div class="flex items-start">
                        <span class="text-blue-600 mr-3">
                            <!-- You can add an icon here -->
                        </span>
                        <p>
                            <strong>Address:</strong><br />
                            Azad Jammu & Kashmir Public Service Commission<br />
                            Jalalabad, Muzaffarabad Azad Kashmir
                        </p>
                    </div>
                    <div class="flex items-center">
                        <span class="text-blue-600 mr-3">
                            <!-- You can add an icon here -->
                        </span>
                        <p><strong>Phone:</strong> 05822- 920203</p>
                    </div>
                    <div class="flex items-center">
                        <span class="text-blue-600 mr-3">
                            <!-- You can add an icon here -->
                        </span>
                        <p><strong>Fax:</strong> 05822- 920203</p>
                    </div>
                    <div class="flex items-center">
                        <span class="text-blue-600 mr-3">
                            <!-- You can add an icon here -->
                        </span>
                        <p><strong>Email:</strong> info@ajkpsc.gov.pk</p>
                    </div>
                </div>
            </div>

            <div class="contact-form">
                <h2 class="text-2xl font-bold mb-6 text-gray-700 border-b pb-2">Send us a Message</h2>
                <form id="contactForm" class="space-y-6">
                    <div>
                        <label for="name" class="block mb-2 text-gray-600">Name</label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                            required
                        />
                    </div>
                    <div>
                        <label for="email" class="block mb-2 text-gray-600">Email</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                            required
                        />
                    </div>
                    <div>
                        <label for="message" class="block mb-2 text-gray-600">Message</label>
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                            required></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-300 font-medium"
                        >Send Message</button
                    >
                </form>
            </div>
        </div>
    </div>
</Layout>
