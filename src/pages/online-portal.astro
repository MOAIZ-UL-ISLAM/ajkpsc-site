---
import "../styles/global.css";
---

<div class="bg-pattern bg-gray-100 min-h-screen flex items-center justify-center px-4 py-8">
    <div class="bg-white shadow-2xl w-full max-w-2xl rounded-2xl overflow-hidden m-auto">
        <div class="p-4 sm:p-8 md:p-16 text-center">
            <div id="logo-container" class="mb-6 md:mb-8">
                <div class="inline-block bg-blue-100 rounded-full p-3 md:p-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 md:h-12 md:w-12 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>

            <h1 id="title" class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 mb-4">
                Coming <span class="text-blue-600">Soon</span>
            </h1>
            <h2 class="text-xs sm:text-sm md:text-base font-bold text-gray-600 mb-6">
                Online portal is coming soon
            </h2>

            <div id="countdown" class="flex flex-wrap justify-center gap-2 sm:gap-4 mb-8">
                <div class="bg-blue-50 p-3 md:p-4 rounded-lg text-center w-16 sm:w-20 md:w-24">
                    <span id="days" class="text-2xl md:text-3xl font-bold text-blue-600 block">00</span>
                    <span class="text-xs text-gray-500">Days</span>
                </div>
                <div class="bg-blue-50 p-3 md:p-4 rounded-lg text-center w-16 sm:w-20 md:w-24">
                    <span id="hours" class="text-2xl md:text-3xl font-bold text-blue-600 block">00</span>
                    <span class="text-xs text-gray-500">Hours</span>
                </div>
                <div class="bg-blue-50 p-3 md:p-4 rounded-lg text-center w-16 sm:w-20 md:w-24">
                    <span id="minutes" class="text-2xl md:text-3xl font-bold text-blue-600 block">00</span>
                    <span class="text-xs text-gray-500">Minutes</span>
                </div>
                <div class="bg-blue-50 p-3 md:p-4 rounded-lg text-center w-16 sm:w-20 md:w-24">
                    <span id="seconds" class="text-2xl md:text-3xl font-bold text-blue-600 block">00</span>
                    <span class="text-xs text-gray-500">Seconds</span>
                </div>
            </div>

            <div id="newsletter-form" class="max-w-md mx-auto px-4">
                <p class="text-sm md:text-base text-gray-600 mb-4">
                    We're working hard to launch our new site. 
                    Stay updated by subscribing to our newsletter.
                </p>
                <div class="flex flex-col sm:flex-row gap-2 sm:gap-0">
                    <input 
                        type="email" 
                        placeholder="Enter your email" 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg sm:rounded-r-none focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                    <button 
                        class="w-full sm:w-32 bg-blue-600 text-white p-3 rounded-lg sm:rounded-l-none hover:bg-blue-700 transition"
                    >
                        Notify Me
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom Background Pattern */
    .bg-pattern {
        background-image: 
            linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,0.8)),
            repeating-linear-gradient(45deg, 
                transparent 0, 
                transparent 25px, 
                rgba(0,0,255,0.05) 25px, 
                rgba(0,0,255,0.05) 50px
            );
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

<script>
    // Countdown Timer
    function updateCountdown() {
        const launchDate = new Date('2024-12-31T00:00:00');
        const now = new Date();
        const difference = launchDate - now;

        const days = Math.floor(difference / (1000 * 60 * 60 * 24));
        const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((difference % (1000 * 60)) / 1000);

        // Removed the padStart to remove hyphen
        document.getElementById('days').textContent = days;
        document.getElementById('hours').textContent = hours;
        document.getElementById('minutes').textContent = minutes;
        document.getElementById('seconds').textContent = seconds;
    }

    // Initial call and interval
    updateCountdown();
    setInterval(updateCountdown, 1000);

    // GSAP Animations
    gsap.fromTo("#logo-container", 
        { opacity: 0, scale: 0.5 }, 
        { opacity: 1, scale: 1, duration: 0.8, ease: "back.out(1.7)" }
    );

    gsap.fromTo("#title", 
        { opacity: 0, y: 50 }, 
        { opacity: 1, y: 0, duration: 0.8, delay: 0.3 }
    );

    gsap.fromTo("#countdown > div", 
        { opacity: 0, y: 50 }, 
        { 
            opacity: 1, 
            y: 0, 
            duration: 0.6, 
            stagger: 0.2,
            ease: "power2.out"
        }
    );

    gsap.fromTo("#newsletter-form", 
        { opacity: 0, scale: 0.9 }, 
        { opacity: 1, scale: 1, duration: 0.8, delay: 0.6 }
    );
</script>